  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="neutralize_module.list">
      <field name="name">neutralize_module list</field>
      <field name="model">neutralize_module.neutralized_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="neutralize_module.action_window">
      <field name="name">neutralize_module window</field>
      <field name="res_model">neutralize_module.neutralized_model</field>
      <field name="view_mode">tree,form</field>
    </record>

